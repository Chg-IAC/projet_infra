global_defs {

   notification_email {
       admin@example.com
   }
   notification_email_from noreply@example.com
   smtp_server 127.0.0.1
   smtp_connect_timeout 60
}
vrrp_script chk_haproxy {
   script "killall -0 haproxy"   # verify the pid existance
   interval 1                    # check every 2 seconds
   weight 51                      # add 2 points of prio if OK
}

vrrp_instance VI_1 {
   interface {{ keepalived_bind_interface }}                # interface to monitor
   state MASTER
   virtual_router_id 51          # Assign one ID for this route
   priority {{ keepalived_priority }}                  # 101 on master, 100 on backup
   virtual_ipaddress {
       {{ keepalived_vip }} dev {{ keepalived_bind_interface }} # the virtual IP
   }
   track_script {
       chk_haproxy
   }
}
